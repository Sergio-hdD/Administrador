{% extends 'base.html.twig' %}

{% block title %}Matter{% endblock %}

{% block body %}
    <h1>Matter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matter.id }}</td>
            </tr>
            <tr>
                <th>IsFirstFourMonth</th>
                <td>{{ matter.isFirstFourMonth ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ matter.name }}</td>
            </tr>
            <tr>
                <th>YearCarrer</th>
                <td>{{ matter.yearCarrer }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_matter_index') }}">back to list</a>

    <a href="{{ path('app_matter_edit', {'id': matter.id}) }}">edit</a>

    {{ include('matter/_delete_form.html.twig') }}
{% endblock %}
