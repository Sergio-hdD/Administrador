{% extends 'base.html.twig' %}

{% block title %}Exam index{% endblock %}

{% block body %}
    <h1>Exam index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>UntilChangeNote</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exam in exams %}
            <tr>
                <td>{{ exam.id }}</td>
                <td>{{ exam.fecha ? exam.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ exam.hora ? exam.hora|date('H:i:s') : '' }}</td>
                <td>{{ exam.untilChangeNote ? exam.untilChangeNote|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_exam_show', {'id': exam.id}) }}">show</a>
                    <a href="{{ path('app_exam_edit', {'id': exam.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_exam_new') }}">Create new</a>
{% endblock %}
